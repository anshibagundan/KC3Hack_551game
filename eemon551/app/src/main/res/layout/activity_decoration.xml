<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".decoration">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--ホーム下-->
        <LinearLayout
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/white">
            <!--ショップ-->
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#757575"
                android:layout_margin="2dp"
                android:onClick="decoration_store">
                <ImageView
                    android:id="@+id/store_img"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    app:srcCompat="@drawable/store" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ショップ"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <!--図鑑-->
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#757575"
                android:layout_margin="2dp"
                android:onClick="decoration_zukann"
                >

                <ImageView
                    android:id="@+id/zukan_img"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/zukan" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="図鑑"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <!--ゲーム-->
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#757575"
                android:layout_margin="2dp"
                android:onClick="decoration_home"

                >
                <ImageView
                    android:id="@+id/quizu"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/quiz" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ゲーム"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <!--装飾-->
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#a9a9ed"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/syougou" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="装飾"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!--説明-->
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#757575"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/setsumei_img"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/setsumei" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="説明"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="decoration_introduce"/>
            </LinearLayout>

        </LinearLayout>
        <!--    decoのホーム画面-->
        <LinearLayout
            android:id="@+id/deco_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            >




        </LinearLayout>

        <!--    名前変更画面-->
        <LinearLayout
            android:id="@+id/name_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >


        </LinearLayout>

        <!--    称号変更-->
        <LinearLayout
            android:id="@+id/title_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <!--        すくろーる-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>

            <!--        提出-->
            <Button
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp">

            </Button>

        </LinearLayout>

        <!--    背景変更-->
        <LinearLayout
            android:id="@+id/back_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <!--button-->

            <!--        「背景変更」-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">
                </GridLayout>
            </ScrollView>
            <!--提出ボタン-->
        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>